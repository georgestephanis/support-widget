<?xml version="1.0"?>
<ruleset xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="vendor/squizlabs/php_codesniffer/phpcs.xsd">
	<!-- What NOT to scan. -->
	<exclude-pattern>*/build/*</exclude-pattern>
	<exclude-pattern>*/vendor/*</exclude-pattern>
	<exclude-pattern>*/node_modules/*</exclude-pattern>
	<exclude-pattern>*/*.asset.php</exclude-pattern>

	<!-- How to scan. -->
	<arg value="sp"/> <!-- Show sniff and progress. -->
	<arg name="colors"/> <!-- Show results with colors. Disable if working on Windows. -->
	<arg name="parallel" value="8"/> <!-- Enables parallel processing when available for faster results. -->
	<arg name="extensions" value="php"/> <!-- Only scan PHP files. -->

	<!-- Run against the PHPCompatibilityWP ruleset and check for cross-version PHP support. -->
	<rule ref="PHPCompatibilityWP"/>
	<config name="testVersion" value="8.3-"/>

	<!-- Run against the WordPress-Extra ruleset and check for the minimum supported WP version. -->
	<rule ref="WordPress-Extra">
		<exclude name="WordPress.Files.FileName.NotHyphenatedLowercase" />
		<exclude name="WordPress.Files.FileName.InvalidClassFileName" />
	</rule>
	<config name="minimum_wp_version" value="6.7"/>

	<!-- Allow additional word delimiters for hook names. -->
	<rule ref="WordPress.NamingConventions.ValidHookName">
		<properties>
			<property name="additionalWordDelimiters" value="/"/>
		</properties>
	</rule>

	<!-- Disallow blank lines at start/end of for/foreach/if blocks. -->
	<rule ref="WordPress.WhiteSpace.ControlStructureSpacing">
		<properties>
			<property name="blank_line_check" value="true"/>
		</properties>
	</rule>

	<!-- Run against the WordPress-Docs ruleset and check for documentation standards. -->
	<rule ref="WordPress-Docs">
		<!-- Ignore missing file comment. -->
		<exclude name="Squiz.Commenting.FileComment.Missing"/>
		<!-- Ignore end char rule since it conflicts with PhpStorm's code folding regions. -->
		<exclude name="Squiz.Commenting.InlineComment.InvalidEndChar" />
		<!-- Exclude Block Editor pattern since they require special headers. -->
		<exclude-pattern>*/patterns/*</exclude-pattern>
	</rule>

	<!-- Ignore missing tags if @inheritDoc is present. -->
	<rule ref="Squiz.Commenting.FunctionComment">
		<properties>
			<property name="skipIfInheritdoc" value="true" />
		</properties>
	</rule>

	<!-- Check that the proper text domain(s) is used everywhere. -->
	<rule ref="WordPress.WP.I18n">
		<properties>
			<property name="text_domain" type="array">
				<element value="support-widget"/>
			</property>
		</properties>
	</rule>

	<!-- Check that the proper prefix is used everywhere. -->
	<rule ref="WordPress.NamingConventions.PrefixAllGlobals">
		<properties>
			<property name="prefixes" type="array">
				<element value="gs_"/>
				<element value="gs_support_widget"/>
			</property>
		</properties>
	</rule>

	<!-- Add any other custom rules here. -->
</ruleset>